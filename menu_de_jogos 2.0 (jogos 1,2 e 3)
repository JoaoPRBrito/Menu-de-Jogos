#include<stdio.h>
#include <conio.h>
#include <stdlib.h>
#include<time.h>
void menu_principal();
void pergunta_resposta();
void olho_de_cobra();
void rodada_extra_1();
void rodada_extra_2();
void rodada_jogador_2();
void rodada_jogador_1();
void adivinhe_o_numero();

int main()
{
	menu_principal();
	return 0;
}
void menu_principal(){
	system("cls || clear");
    int continuar=1;

    do
    {
        printf("Bem Vindo!Digite qual minigame voce quer jogar.\n\n");
        printf("Digite 1 para jogar Pergunta e resposta.\n");
		printf("Digite 2 para jogar Adivinhe o numero.\n");
		printf("Digite 3 para jogar Olho de cobra.\n");;
        printf("Digite 0 para sair do programa.\n");

        scanf("%d", &continuar);
        system("cls || clear");

        switch(continuar)
        {
            case 1:
                //Pergunta e resposta
                pergunta_resposta();
                break;

            case 2:
                adivinhe_o_numero();
                break;

            case 3:
                //Olho de cobra
                olho_de_cobra();
                break;

            case 0:
  	           exit(0);
                break;

            default:
                printf("Digite uma opcao valida\n");
        }
    } while(continuar);
}
//-------------------primeiro jogo----------------------
void pergunta_resposta(){
	int resposta;
    int r_c=0;

//Primeira pergunta
system("cls || clear");
printf("Normalmente, quantos litros de sangue uma pessoa tem? Em media, quantos sao retirados numa doacao de sangue?\n");
printf("1) Tem entre 2 a 4 litros. Sao retirados 450 mililitros.\n");
printf("2) Tem entre 4 a 6 litros. Sao retirados 450 mililitros.\n");
printf("3) Tem 10 litros. Sao retirados 2 litros.\n");
printf("Digite o numero da sua resposta\n");

scanf("%d", &resposta);
  
if(resposta==2){
printf("resposta correta!\n");
r_c++;
system("pause");
}else{
printf("resposta incorreta\n");
printf("A resposta correta eh:\n2) Tem entre 4 a 6 litros. Sao retirados 450 mililitros.\n\n");
system("pause");
}
//Segunda Pergunta
system("cls || clear");
printf("De quem eh a famosa frase Penso, logo existo?\n");
printf("1) Platao.\n");
printf("2) Galileu Galilei.\n");
printf("3) Descartes\n");
printf("Digite o numero da sua resposta\n");

scanf("%d", &resposta);
  
if(resposta==3){
printf("resposta correta!\n");
r_c++;
system("pause");
}else{
printf("resposta incorreta\n");
printf("A resposta correta eh:\n3)Descartes\n\n");
system("pause");
}
//Terceira Pergunta 
system("cls || clear");
printf("De onde eh a invenção do chuveiro eletrico?\n");
printf("1) Franca.\n");
printf("2) Inglaterra.\n");
printf("3) Brasil.\n");
printf("Digite o numero da sua resposta\n\n");

scanf("%d", &resposta);

  
if(resposta==3){
printf("resposta correta!\n");
r_c++;
system("pause");
}else{
printf("resposta incorreta\n");
printf("A resposta correta eh:\n3)Brasil\n\n");
system("pause");
}
system("cls || clear");
  printf("o numero de respostas corretas eh:%d\n\n",r_c);
  printf("Deseja jogar novamente?Digite 1 para sim,ou 0 para voltar ao menu inicial.\n\n");
  scanf("%d", &resposta);
  if (resposta==1){
	  pergunta_resposta();
  }else{
	  menu_principal();
  }
}
//-------------------segundo jogo----------------------

void adivinhe_o_numero(){
int resposta;
int i;
int j=0;
int tentativas=4;
i=rand() % 1000;
  
    printf("Estou pensando em um numero entre 0 e 1000.Tente adivinha qual eh e digite a sua resposta:\n\n"); 	
    for(j=0;j<5;j++){
  	if(i!=resposta){
	scanf("%d",&resposta);
	printf("\n");
    if(resposta<i){
    system("cls || clear");	
	printf("O numero que estou pensando eh maior que %d\n\n",resposta);
	printf("digite outro numero\n\n");
	printf("Voce tem %d tentativas\n\n",tentativas);
    tentativas--;
    }
    
    if(resposta>i){
    system("cls || clear");	
	printf("O numero que estou pensando eh menor que %d\n\n",resposta);
	printf("digite outro numero\n\n");
	printf("Voce tem %d tentativas\n\n",tentativas);
	
    tentativas--;
    
    }
    
    if(resposta==i){
 	system("cls || clear");
	printf("Voce acertou!!!\n\n");
	}
    
	}
	}
	 if(j==5){
	 	system("pause");
	 	system("cls || clear");
    	printf("Deseja jogar novamente?Digite 1 para sim,ou 0 para voltar ao menu inicial.\n\n");
        scanf("%d", &resposta);
        if (resposta==1){
        system("cls || clear");		
	    adivinhe_o_numero();
        }else{
        system("cls || clear");	
        menu_principal();
  }
	}
}



//-------------------terceiro jogo----------------------

    int i;
    int resposta;
    int valor_dado_1;
    int valor_dado_2;
    int pontuacao_1;
    int pontuacao_2;
    int rodada_1;
    int rodada_2;
    int rodada_plus;
	char jogador_1[50];
	char jogador_2[50];
	
	void rodada_jogador_1(){
    while((pontuacao_1<50)&&(pontuacao_2<=50)){
	valor_dado_1=1 + ( rand() % 6 );
	valor_dado_2=1 + ( rand() % 6 );
    rodada_1=valor_dado_1+valor_dado_2;
	printf("Rodada jogador 1\n\n");
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_1);
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_2);
      printf("A sua pontuacao nessa rodada eh igual a: %d\n\n",rodada_1);
    printf("Voce deseja manter a pontuacao dessa rodada e finalizar seu turno?\n"); 
    printf("Caso queira arriscar uma rodada extra voce perdera os pontos da rodada caso um dos dados caia no numero 1 ou perdera \ntodos os pontos que possui caso os dois dados caiam em 1.\n\n");
	printf("Digite 0 para finalizar o turno e 1 para jogar novamente\n");
    scanf("%d",&resposta);
    if(resposta==0){
    pontuacao_1=pontuacao_1+rodada_1;
    printf("pontuacao total: %d\n",pontuacao_1);
 	system("pause");
    system("cls || clear");
	rodada_jogador_2();
    
	}else{
    rodada_extra_1();
	}
	}
	}
	
	
	void rodada_jogador_2(){
    while((pontuacao_1<50)&&(pontuacao_2<=50)){
	valor_dado_1=1 + ( rand() % 6 );
	valor_dado_2=1 + ( rand() % 6 );
	rodada_2=valor_dado_1+valor_dado_2;
	printf("Rodada jogador 2\n\n");
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_1);
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_2);
    printf("A sua pontuacao nessa rodada eh igual a: %d\n\n",rodada_2);
    printf("Voce deseja manter a pontuacao dessa rodada e finalizar seu turno?\n"); 
    printf("Caso queira arriscar uma rodada extra voce perdera os pontos da rodada caso um dos dados caia no numero 1 ou perdera \ntodos os pontos que possui caso os dois dados caiam em 1.\n\n");
    printf("Digite 0 para finalizar o turno e 1 para jogar novamente\n");
    scanf("%d",&resposta);
	if(resposta==0){
    pontuacao_2=pontuacao_2+rodada_2;
    printf("pontuacao total: %d\n",pontuacao_2);
    system("pause");
    system("cls || clear");
    rodada_jogador_1();
	}else{
    rodada_extra_2();	
	}
	}
	}

    void rodada_extra_1(){
    system("cls || clear");	
    printf("Voce decidiu jogar novamente.\n");
 	valor_dado_1=1 + ( rand() % 6 );
	valor_dado_2=1 + ( rand() % 6 );
	rodada_plus=valor_dado_1+valor_dado_2;
	system("pause");
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_1);
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_2);
    if((valor_dado_1==1)&&(valor_dado_2==1)){
    printf("Os dados cairam ambos no numero 1.Portanto,voce perdera todos os ponto adquiridos ate agora\n");
    pontuacao_1=0;
    printf("pontuacao total: %d",pontuacao_1);

	}else if((valor_dado_1==1)||(valor_dado_2==1)){
    printf("um dos seus dados caiu no numero 1.Portanto,voce perdera os pontos dessa rodada\n");
    rodada_plus=0;
    printf("A sua pontuacao nessa rodada eh igual a: %d\n",rodada_plus);
    printf("pontuacao total: %d\n",pontuacao_1);
	}else{
    printf("A sua pontuacao nessa rodada eh igual a: %d\n",rodada_plus);
    pontuacao_1=pontuacao_1+rodada_plus;
    printf("pontuacao total: %d\n",pontuacao_1);
	}
	system("pause");
    system("cls || clear");
	rodada_jogador_2();
	}
	void rodada_extra_2(){
	system("cls || clear");
    printf("Voce decidiu jogar novamente.\n");
 	valor_dado_1=1 + ( rand() % 6 );
	valor_dado_2=1 + ( rand() % 6 );
	rodada_plus=valor_dado_1+valor_dado_2;
	system("pause");
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_1);
    printf("O numero sorteado no primeiro dado eh: %d\n",valor_dado_2);
    if((valor_dado_1==1)&&(valor_dado_2==1)){
    printf("Os dados cairam ambos no numero 1.Portanto,voce perdera todos os ponto adquiridos ate agora\n");
    pontuacao_2=0;
    printf("pontuacao total: %d\n",pontuacao_2);

	}else if((valor_dado_1==1)||(valor_dado_2==1)){
    printf("um dos seus dados caiu no numero 1.Portanto,voce perdera os pontos dessa rodada\n");
    rodada_plus=0;
    printf("A sua pontuacao nessa rodada eh igual a: %d\n",rodada_plus);
    printf("pontuacao total: %d\n",pontuacao_2);
	}else{
    printf("A sua pontuacao nessa rodada eh igual a: %d\n",rodada_plus);
    pontuacao_2=pontuacao_2+rodada_plus;
    printf("pontuacao total: %d\n",pontuacao_2);
	}
	system("pause");
    system("cls || clear");
	rodada_jogador_1();
	}
void olho_de_cobra(){  
	
    while((pontuacao_1<50)&&(pontuacao_2<50)){
    printf("Bem vindo ao jogo Olho de cobra.O primeiro jogador a conseguir 50 pontos ganha\n\n");
    //dados jogadores
	printf("insira o nome do jogador numero 1\n");
    scanf("%s", jogador_1);
    system("cls || clear");
    printf("insira o nome do jogador numero 2\n");
    scanf("%s", jogador_2);
    //sortear quem joga primeiro
    srand(time(NULL));
    i= rand() % 2;
    //anunciar quem joga primeiro
    if((i=1)){
 	system("cls || clear");
	printf("o primeiro jogador sera %s\n",jogador_1);
	system("pause");
	system("cls || clear");
	
	rodada_jogador_1();
	}else{
    system("cls || clear");
    printf("o primeiro jogador sera %s\n",jogador_2);
    system("pause");
	rodada_jogador_2();
	}
	}
    if(pontuacao_1>=50){
 	system("cls || clear");
	printf("Parabens %s\n",jogador_1);
	printf("voce venceu o jogo!\n");
	printf("score final: %d\n",pontuacao_1);
	}
	if(pontuacao_2>=50){
    system("cls || clear");
	printf("Parabens %s\n",jogador_2);
	printf("voce venceu o jogo!\n");
	printf("score final: %d\n",pontuacao_2);
	}
	printf("Deseja jogar novamente?Digite 1 para sim,ou 0 para voltar ao menu inicial.\n\n");
        scanf("%d", &resposta);
        if (resposta==1){
	    olho_de_cobra();
        }else{
        menu_principal();}
	
}
